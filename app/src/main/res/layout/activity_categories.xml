<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categories_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".CategoriesActivity">

    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_bg"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="What Now"
        app:titleTextColor="#FFFFFF"


        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView

            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:text="Pick your category of interest"
            android:textColor="#333333"
            android:textSize="20sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/categoriesGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Sports -->
            <LinearLayout
                android:id="@+id/btnSports"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/category_bg_sports"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ic_sports"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Sports"
                    android:src="@drawable/ic_sports" />

                <TextView
                    android:id="@+id/tvSportsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Sports"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Politics -->
            <LinearLayout
                android:id="@+id/btnPolitics"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/category_bg_politics"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ic_politics"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Politics"
                    android:src="@drawable/ic_politics" />

                <TextView
                    android:id="@+id/tvPoliticsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Politics"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Health -->
            <LinearLayout
                android:id="@+id/btnHealth"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/category_bg_health"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ic_health"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Health"
                    android:src="@drawable/ic_health" />

                <TextView
                    android:id="@+id/tvHealthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Health"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Business -->
            <LinearLayout
                android:id="@+id/btnBusiness"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/category_bg_business"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ic_business"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="Business"
                    android:src="@drawable/ic_business" />

                <TextView
                    android:id="@+id/tvBusinessLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Business"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</LinearLayout>

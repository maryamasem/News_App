<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/categories_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7F7"
    android:orientation="vertical"
    tools:context=".CategoriesActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_bg"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="What Now"
        app:titleTextColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:text="@string/pick_your_category_of_interest"
            android:textColor="#333333"
            android:textSize="32sp"
            android:textStyle="bold" />

        <GridLayout
            android:id="@+id/categoriesGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <!-- Sports -->
            <LinearLayout
                android:id="@+id/btnSports"
                style="@style/categoryStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/category_bg_sports">

                <ImageView
                    android:id="@+id/ic_sports"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/sports"
                    android:src="@drawable/ic_sports" />

                <TextView
                    android:id="@+id/tvSportsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="8dp"
                    android:text="@string/sports"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Politics -->
            <LinearLayout
                android:id="@+id/btnPolitics"
                style="@style/categoryStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/category_bg_politics">

                <ImageView
                    android:id="@+id/ic_politics"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/politics"
                    android:src="@drawable/ic_politics" />

                <TextView
                    android:id="@+id/tvPoliticsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/politics"
                    android:textColor="#FFFFFF"

                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Health -->
            <LinearLayout
                android:id="@+id/btnHealth"
                style="@style/categoryStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/category_bg_health"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/ic_health"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/health"
                    android:src="@drawable/ic_health" />

                <TextView
                    android:id="@+id/tvHealthLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:text="@string/health"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Business -->
            <LinearLayout
                android:id="@+id/btnBusiness"
                style="@style/categoryStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/category_bg_business">

                <ImageView
                    android:id="@+id/ic_business"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/business"
                    android:src="@drawable/ic_business" />

                <TextView
                    android:id="@+id/tvBusinessLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/business"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <!-- Entertainment -->
            <LinearLayout
                android:id="@+id/btnEntertainment"
                style="@style/categoryStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/category_bg_entertainment">

                <ImageView
                    android:id="@+id/ic_Entertainment"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/entertainment"
                    android:src="@drawable/ic_entertainment" />

                <TextView
                    android:id="@+id/tvEntertainmentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/entertainment"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Technology -->

            <LinearLayout
                android:id="@+id/btnTech"
                style="@style/categoryStyle"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/category_bg_tech">

                <ImageView
                    android:id="@+id/ic_tech"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@string/technology"
                    android:src="@drawable/tech_ic" />

                <TextView
                    android:id="@+id/tvTechLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/technology"
                    android:textColor="#FFFFFF"

                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

</LinearLayout>
